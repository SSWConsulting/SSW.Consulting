<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="{StaticResource MainBackground}"
             x:Class="SSW.Rewards.Pages.ScanPage">
    <StackLayout>
        <StackLayout>
            <Label Text="Scan a QR Code"
                   HorizontalTextAlignment="Center"
                   TextColor="White"/>
            <Label Text="from an SSW Employee or Presentation"
                   HorizontalTextAlignment="Center"
                   TextColor="White"/>
        </StackLayout>
        <Grid>
            <zxing:ZXingScannerView x:Name="scannerView"
                                        OnScanResult="Handle_OnScanResult"
                                        IsScanning="true"
                                        WidthRequest="300"
                                        HeightRequest="300"/>

            <Image Source="qr_filter"
                       Opacity="0.5"/>
            <Image Source="qr_reticle"/>
        </Grid>
    </StackLayout>
</ContentPage>