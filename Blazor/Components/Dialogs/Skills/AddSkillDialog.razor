<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add Skill</MudText>    
    </TitleContent>
    <DialogContent>
        <MudForm  @ref="form" Model="@dto" @bind-IsValid="@valid">
        <MudTextField
            AutoFocus="true"
            Class="d-inline" T="string" Label="Reward Name" @bind-Value="@dto" Required="true"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton 
            Variant="Variant.Filled"
            Color="Color.Primary" OnClick="Submit">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string dto { get; set; } = string.Empty;
    MudForm form;
    public bool valid;
    
    void Submit()
    {
        form.Validate();
        if (valid)
        {
            MudDialog?.Close(DialogResult.Ok(dto));
        }
    }
    void Cancel() => MudDialog?.Cancel();
}