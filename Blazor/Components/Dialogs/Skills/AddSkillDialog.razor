@using SSW.Rewards.Api
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add Skill</MudText>    
    </TitleContent>
    <DialogContent>
        <MudTextField Class="d-inline" T="string" Label="Reward Name" @bind-Value="@dto"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string dto { get; set; } = string.Empty;

    void Submit() => MudDialog?.Close(DialogResult.Ok(dto));
    void Cancel() => MudDialog?.Cancel();
}