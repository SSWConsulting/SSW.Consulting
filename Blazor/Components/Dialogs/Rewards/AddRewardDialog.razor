<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add Reward</MudText>    
    </TitleContent>
    <DialogContent>
        <MudForm  @ref="form" Model="@dto" @bind-IsValid="@valid">
            <MudTextField Class="d-inline" T="string" Label="Reward Name" @bind-Value="@dto.Name" AutoFocus="true" Required="true"/>
            <MudTextField Class="d-inline" T="int" Label="Reward Cost" @bind-Value="@dto.Cost" Required="true"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary" OnClick="Submit">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }
    [Parameter]
    public RewardViewModel dto { get; set; } = new();
    MudForm form;
    public bool valid;
    
    void Submit()
    {
        form.Validate();
        if (valid)
        {
            MudDialog?.Close(DialogResult.Ok(dto));
        }
    }
    void Cancel() => MudDialog?.Cancel();
}