<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SSW.Rewards.Mobile.Converters"
             xmlns:viewModels="clr-namespace:SSW.Rewards.Mobile.ViewModels"
             xmlns:models="clr-namespace:SSW.Rewards.Models"
             x:Class="SSW.Rewards.Mobile.Controls.RecentActivity"
             x:DataType="viewModels:ProfileCarouselViewModel">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:ActivityTypeToIconConverter x:Key="TypeToIcon"/>
        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <Grid RowDefinitions="*,5*"
              Padding="20">
            <Label Text="Recent Activity"
                 TextColor="White"
                 FontAttributes="Bold"
                 HorizontalOptions="Center"
                 HorizontalTextAlignment="Center"
                 VerticalOptions="Start"
                 FontSize="Title"
                 Margin="10"
                   Grid.Row="0"/>

            <CollectionView ItemsSource="{Binding RecentActivity}"
                            Grid.Row="1">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="20" />
                </CollectionView.ItemsLayout>
                <CollectionView.EmptyView>
                    <ContentView>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             WidthRequest="200">
                            <Label Text="{Binding EmptyHeader}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource LeaderCardBackground}"/>
                            <Label Text="Scan an SSWer, attend an event or complete a quiz to see some activity here."
                                   LineBreakMode="WordWrap"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource LeaderCardBackground}"/>
                        </VerticalStackLayout>
                    </ContentView>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Activity">
                        <Grid BackgroundColor="{StaticResource LeaderCardBackground}"
                              ColumnDefinitions="2*,10*,4*"
                              Padding="5">
                            <Label TextColor="White"
                                   Text="{Binding Type, Converter={StaticResource TypeToIcon}}"
                                   FontFamily="FluentIcons"
                                   FontSize="Title"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            <Label Grid.Column="1"
                                   Text="{Binding ActivityName}"
                                   TextColor="White"
                                   FontSize="12"
                                   Margin="10,5"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="2"
                                   Text="{Binding OcurredAt, StringFormat='{0:dd/MM/yyyy}'}"
                                   FontSize="11"
                                   TextColor="White"
                                   Margin="0,0,5,0"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentView.Content>
</ContentView>

<!--, StringFormat='{0:dd//MM//yyyy}'-->