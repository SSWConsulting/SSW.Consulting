<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="SSW.Rewards.Mobile.Controls.FlyoutHeader"
      xmlns:resolver="clr-namespace:Maui.Plugins.PageResolver;assembly=Maui.Plugins.PageResolver"
      xmlns:vm="clr-namespace:SSW.Rewards.Mobile.ViewModels"
      xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
      HeightRequest="668"
      Margin="0"
      Padding="20"
      xmlns:zx="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
      x:DataType="vm:FlyoutHeaderViewModel"
      RowDefinitions="100,60,158,32,50,182,32">
    <Grid.BindingContext>
        <resolver:ResolveViewModel x:TypeArguments="vm:FlyoutHeaderViewModel"/>
    </Grid.BindingContext>

    <mct:AvatarView Grid.Row="0"
                    VerticalOptions="End"
                    HorizontalOptions="Start"
                    ImageSource="{Binding ProfilePic}"
                    HeightRequest="80"
                    WidthRequest="80"
                    CornerRadius="40"
                    BorderColor="White"
                    BorderWidth="2"/>


    <HorizontalStackLayout Grid.Row="1"
                           Margin="0,0,5,0"
                           Spacing="5"
                           VerticalOptions="Center">
        <Label Style="{StaticResource FlyoutLabelBold}"
               FontSize="Large"
               Text="{Binding Name}"
               TextColor="White"
               VerticalTextAlignment="End" />

        <Label FontFamily="FA6Brands"
               TextColor="White"
               VerticalTextAlignment="Center"
               TranslationY="1"
               Text="&#xf3ca;"
               IsVisible="{Binding IsStaff}"/>
    </HorizontalStackLayout>

    <Grid Grid.Row="2"
          RowSpacing="2"
          RowDefinitions="40,40,40"
          ColumnDefinitions="104,*">
        <Border Grid.Column="0"
                Grid.Row="0"
                BackgroundColor="{StaticResource RankingTableHeader}"
                Stroke="{StaticResource RankingTableHeader}"
                StrokeShape="RoundRectangle 4,0,4,0">
            <HorizontalStackLayout>
                <Label VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Margin="10,0,0,0"
                       FontFamily="FA6Solid"
                       TextColor="{StaticResource Coin}"
                       Text="&#xf091;"/>            
                <Label Style="{StaticResource FlyoutLabelBold}"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Margin="10,0,0,0"
                       TextColor="White"
                       Text="Ranking"/>
            </HorizontalStackLayout>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="0"
                BackgroundColor="{StaticResource RankingTableBody}"
                StrokeShape="RoundRectangle 0,4,0,4"
                Padding="5">
            <Label Style="{StaticResource FlyoutLabelBold}"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White"
                   Text="1"/>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="1"
                BackgroundColor="{StaticResource RankingTableHeader}"
                Stroke="{StaticResource RankingTableHeader}"
                StrokeShape="RoundRectangle 4,0,4,0">

            <HorizontalStackLayout>
                <Label VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Margin="10,0,0,0"
                       FontFamily="FA6Solid"
                       TextColor="{StaticResource Coin}"
                       Text="&#x2b50;"/>
                <Label Style="{StaticResource FlyoutLabelBold}"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Margin="10,0,0,0"
                       TextColor="White"
                       Text="Points"/>
            </HorizontalStackLayout>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="1"
                BackgroundColor="{StaticResource RankingTableBody}"
                StrokeShape="RoundRectangle 0,4,0,4"
                Padding="5">
            <Label Style="{StaticResource FlyoutLabelBold}"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White"
                   Text="130,000"/>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="2"
                BackgroundColor="{StaticResource RankingTableHeader}"
                Stroke="{StaticResource RankingTableHeader}"
                StrokeShape="RoundRectangle 4,0,4,0">

            <HorizontalStackLayout>
                <Label VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Margin="10,0,0,0"
                       FontFamily="FA6Solid"
                       TextColor="{StaticResource Coin}"
                       Text="&#xf51e;"/>
                <Label Style="{StaticResource FlyoutLabelBold}"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       Margin="10,0,0,0"
                       TextColor="White"
                       Text="Credits"/>
            </HorizontalStackLayout>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="2"
                BackgroundColor="{StaticResource RankingTableBody}"
                StrokeShape="RoundRectangle 0,4,0,4"
                Padding="5">
            <Label Style="{StaticResource FlyoutLabelBold}"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White"
                   Text="30,000"/>
            </Border>
        <Border Grid.Column="1"
                Grid.Row="2"
                Background="{StaticResource BrandBrush}"
                StrokeShape="RoundRectangle 4"
                Padding="5"
                WidthRequest="80"
                Margin="2"
                HorizontalOptions="End">
            <Label Style="{StaticResource FlyoutLabelBold}"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   Text="Redeem"/>
        </Border>
    </Grid>

    <VerticalStackLayout Grid.Row="3"
                         VerticalOptions="Start">
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#171717"
                 VerticalOptions="End"/>
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#404040"
                 VerticalOptions="Start"/>
    </VerticalStackLayout>

    <Grid
        Grid.Row="4"
        ColumnDefinitions="20,*"
        RowDefinitions="*,*"
        ColumnSpacing="5">
        <Label Grid.Row="0"
               Grid.Column="0"
               TextColor="{StaticResource SSWRed}"
               HorizontalTextAlignment="Center"
               VerticalOptions="Start"
               FontSize="Medium"
               FontFamily="FA6Solid"
               Text="&#x2709;"/>
            
        <Label Grid.Row="0"
               Grid.Column="1"
               Style="{StaticResource FlyoutLabelBold}"
               TextColor="White"
               VerticalOptions="Start"
               FontSize="Medium"
               Text="{Binding Email}"/>
        
        <Label Grid.Row="1"
               Grid.Column="0"
               TextColor="{StaticResource SSWRed}"
               HorizontalTextAlignment="Center"
               VerticalOptions="Start"
               FontSize="Medium"
               FontFamily="FA6Solid"
               Text="&#xf041;"/>  
            
        <!-- TODO: Bind data -->
        <Label Grid.Row="1"
               Grid.Column="1"
               Style="{StaticResource FlyoutLabelBold}"
               TextColor="White"
               VerticalOptions="Start"
               FontSize="Medium"
               Text="Brisbane"/>
    </Grid>

    <zx:BarcodeGeneratorView Grid.Row="5"
                             x:Name="codeView"
                             Format="QrCode"
                             Value="sdkfl;se90"
                             HorizontalOptions="Start"
                             BackgroundColor="Transparent"
                             ForegroundColor="#DDDDDD"
                             WidthRequest="150"
                             HeightRequest="150"
                             VerticalOptions="Center"
                             TranslationX="-10"/>
    
    <VerticalStackLayout Grid.Row="6"
                         VerticalOptions="Start">
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#171717"
                 VerticalOptions="End"/>
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#404040"
                 VerticalOptions="Start"/>
    </VerticalStackLayout>
</Grid>
