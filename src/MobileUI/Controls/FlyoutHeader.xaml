<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="SSW.Rewards.Mobile.Controls.FlyoutHeader"
      xmlns:resolver="clr-namespace:Maui.Plugins.PageResolver;assembly=Maui.Plugins.PageResolver"
      xmlns:vm="clr-namespace:SSW.Rewards.Mobile.ViewModels"
      xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
      HeightRequest="668"
      Margin="0"
      Padding="20"
      xmlns:local="clr-namespace:SSW.Rewards.Mobile.Controls"
      xmlns:zx="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
      x:DataType="vm:FlyoutHeaderViewModel"
      RowDefinitions="100,60,158,32,50,182,32">
    <Grid.BindingContext>
        <resolver:ResolveViewModel x:TypeArguments="vm:FlyoutHeaderViewModel"/>
    </Grid.BindingContext>

    <mct:AvatarView Grid.Row="0"
                    VerticalOptions="End"
                    HorizontalOptions="Start"
                    ImageSource="{Binding ProfilePic}"
                    HeightRequest="80"
                    WidthRequest="80"
                    CornerRadius="40"
                    BorderColor="White"
                    BorderWidth="2"
                    x:Name="AvatarView"/>


    <HorizontalStackLayout Grid.Row="1"
                           Margin="0,0,5,0"
                           Spacing="5"
                           VerticalOptions="Center">
        <Label FontSize="Large"
               Text="{Binding Name}"
               x:Name="NameLabel"
               TextColor="White"
               FontAttributes="Bold"
               
               VerticalTextAlignment="End" />

        <Label FontFamily="FA6Brands"
               TextColor="White"
               VerticalTextAlignment="Center"
               TranslationY="1"
               Text="&#xf3ca;"
               IsVisible="{Binding IsStaff}"
               x:Name="IsStaffLabel"/>
    </HorizontalStackLayout>

    <Grid Grid.Row="2"
          RowSpacing="2"
          RowDefinitions="40,40,40"
          ColumnDefinitions="104,*">
        <Border Grid.Column="0"
                Grid.Row="0"
                BackgroundColor="{StaticResource RankingTableHeader}"
                Stroke="{StaticResource RankingTableHeader}"
                StrokeShape="RoundRectangle 4,0,4,0">
            <Label VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   Margin="10,0,0,0"
                   TextColor="White"
                   Text="🏆 Ranking"/>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="0"
                BackgroundColor="{StaticResource RankingTableBody}"
                StrokeShape="RoundRectangle 0,4,0,4"
                Padding="5">
            <Label VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White"
                   FontAttributes="Bold"
                   Text="1"/>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="1"
                BackgroundColor="{StaticResource RankingTableHeader}"
                Stroke="{StaticResource RankingTableHeader}"
                StrokeShape="RoundRectangle 4,0,4,0">
            <Label VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   Margin="10,0,0,0"
                   TextColor="White"
                   Text="⭐ Points"/>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="1"
                BackgroundColor="{StaticResource RankingTableBody}"
                StrokeShape="RoundRectangle 0,4,0,4"
                Padding="5">
            <Label VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White"
                   FontAttributes="Bold"
                   Text="130,000"/>
        </Border>

        <Border Grid.Column="0"
                Grid.Row="2"
                BackgroundColor="{StaticResource RankingTableHeader}"
                Stroke="{StaticResource RankingTableHeader}"
                StrokeShape="RoundRectangle 4,0,4,0">
            <Label VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   Margin="10,0,0,0"
                   TextColor="White"
                   Text="🪙 Credits"/>
        </Border>

        <Border Grid.Column="1"
                Grid.Row="2"
                BackgroundColor="{StaticResource RankingTableBody}"
                StrokeShape="RoundRectangle 0,4,0,4"
                Padding="5">
            <Label VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White"
                   FontAttributes="Bold"
                   Text="30,000"/>
            </Border>
        <Border Grid.Column="1"
                Grid.Row="2"
                Background="{StaticResource BrandBrush}"
                StrokeShape="RoundRectangle 4"
                Padding="5"
                WidthRequest="80"
                Margin="2"
                HorizontalOptions="End">
            <Label VerticalOptions="Center"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   FontAttributes="Bold"
                   Text="Redeem"/>
        </Border>
    </Grid>

    <VerticalStackLayout Grid.Row="3"
                         VerticalOptions="Start">
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#171717"
                 VerticalOptions="End"/>
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#404040"
                 VerticalOptions="Start"/>
    </VerticalStackLayout>

    <VerticalStackLayout Grid.Row="4">
        <Label TextColor="White"
               VerticalOptions="Start"
               FontAttributes="Bold"
               FontSize="Medium"
               Text="✉️ mattgoldman@ssw.com.au"
               x:Name="EmailLabel" />

        <Label TextColor="White"
               VerticalOptions="Start"
               FontAttributes="Bold"
               FontSize="Medium"
               Text="📍 Newcastle"
               x:Name="LocationLabel" />
    </VerticalStackLayout>

    <zx:BarcodeGeneratorView Grid.Row="5"
                             x:Name="codeView"
                             Format="QrCode"
                             Value="sdkfl;se90"
                             HorizontalOptions="Start"
                             BackgroundColor="Transparent"
                             ForegroundColor="#DDDDDD"
                             WidthRequest="150"
                             HeightRequest="150"
                             VerticalOptions="Center"
                             TranslationX="-10"/>
    
    <VerticalStackLayout Grid.Row="6"
                         VerticalOptions="Start">
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#171717"
                 VerticalOptions="End"/>
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#404040"
                 VerticalOptions="Start"/>
    </VerticalStackLayout>
</Grid>
