        <!--            VerticalOptions="Center" -->
        <!--            VerticalTextAlignment="Center" -->
        <!--            HorizontalOptions="Center" -->
        <!--            HorizontalTextAlignment="Center" -->
        <!--            TextColor="White" -->
        <!--            Text="Redeem"/> -->
        <!-- </Border> -->
    </Grid>

    <VerticalStackLayout Grid.Row="3"
                         VerticalOptions="Start">
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#171717"
                 VerticalOptions="End"/>
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#404040"
                 VerticalOptions="Start"/>
    </VerticalStackLayout>

    <Grid
        Grid.Row="4"
        ColumnDefinitions="20,*"
        RowDefinitions="*,*"
        ColumnSpacing="8"
        RowSpacing="4" >
        <Label Grid.Row="0"
               Grid.Column="0"
               TextColor="{StaticResource SSWRed}"
               HorizontalTextAlignment="Center"
               VerticalOptions="Center"
               FontSize="Small"
               FontFamily="FA6Solid"
               Text="&#x2709;"/>
            
        <Label Grid.Row="0"
               Grid.Column="1"
               Style="{StaticResource LabelBold}"
               TextColor="#DDDDDD"
               VerticalOptions="Center"
               FontSize="Small"
               Text="{Binding Email}"/>
        
        <!-- TODO: Bind user location when implemented -->
        <!-- https://github.com/SSWConsulting/SSW.Rewards.Mobile/issues/581 -->
        <!-- <Label Grid.Row="1" -->
        <!--        Grid.Column="0" -->
        <!--        TextColor="{StaticResource SSWRed}" -->
        <!--        HorizontalTextAlignment="Center" -->
        <!--        VerticalOptions="Center" -->
        <!--        FontSize="Medium" -->
        <!--        FontFamily="FA6Solid" -->
        <!--        Text="&#xf041;"/>   -->
        <!--      -->
        <!-- <Label Grid.Row="1" -->
        <!--        Grid.Column="1" -->
        <!--        Style="{StaticResource LabelBold}" -->
        <!--        TextColor="#DDDDDD" -->
        <!--        VerticalOptions="Center" -->
        <!--        FontSize="Medium" -->
        <!--        Text="Brisbane"/> -->
    </Grid>

    <zx:BarcodeGeneratorView Grid.Row="5"
                             x:Name="codeView"
                             Format="QrCode"
                             Value="{Binding QrCode}"
                             HorizontalOptions="Start"
                             BackgroundColor="#DDDDDD"
                             ForegroundColor="Transparent"
                             WidthRequest="150"
                             HeightRequest="150"
                             VerticalOptions="Center"/>
    
    <VerticalStackLayout Grid.Row="6"
                         VerticalOptions="Start">
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#171717"
                 VerticalOptions="End"/>
        <BoxView HorizontalOptions="FillAndExpand"
                 HeightRequest="1"
                 Color="#404040"
                 VerticalOptions="Start"/>
    </VerticalStackLayout>
</Grid>
